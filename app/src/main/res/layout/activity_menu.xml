<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/light_yellow"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:paddingRight="20dp"
    android:paddingLeft="40dp"
    android:paddingTop="90dp"
    android:layout_gravity="center">

    <EditText
        android:background="@color/dark_yellow"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:textColorHint="@color/dark_gray"
        android:textColor="@color/dark_gray"
        android:singleLine="true"
        android:padding="10dp"
        android:inputType="text"
        android:hint="업체명 검색"
        android:layout_marginBottom="100dp"
        android:id="@+id/search"/>

    <ImageButton
        android:background="@drawable/magnifier"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:id="@+id/magnifierbtn"
        android:layout_marginLeft="12dp"
        android:onClick="magnifier_onclick"/>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center">

    <ImageButton
        android:background="@drawable/search"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:id="@+id/searchbtn"
        android:onClick="search_onclick"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"/>

    <ImageButton
        android:background="@drawable/map"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:id="@+id/gpsbtn"
        android:onClick="gps_onclick"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"/>

    <ImageButton
        android:background="@drawable/store"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:id="@+id/storebtn"
        android:onClick="store_onclick"/>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:textSize="20dp"
        android:text="카테고리"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:text="위치 찾기"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="18dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:text="위생 업체"/>

</LinearLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

    <TextView
        android:background="#FFA500"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:background="@drawable/home"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/homebtn"
        android:layout_marginLeft="20dp"
        android:onClick="home_onclick"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:background="@drawable/magnifier2"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/searchrightbtn"
        android:layout_marginLeft="120dp"
        android:onClick="searchright_onclick"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:background="@drawable/placeholder2"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/placebtn"
        android:layout_marginLeft="220dp"
        android:onClick="place_onclick"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:background="@drawable/heart"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/favoritebtn"
        android:layout_marginLeft="310dp"
        android:onClick="favorite_onclick"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

</LinearLayout>